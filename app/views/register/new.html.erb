<section class="form">
  <%= form_tag "/register", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @user_info[:name] %>
    <%= label_tag :address %>
    <%= text_field_tag :address, @user_info[:address]%>
    <%= label_tag :city %>
    <%= text_field_tag :city, @user_info[:city] %>
    <%= label_tag :state %>
    <%= text_field_tag :state, @user_info[:state] %>
    <%= label_tag :zip %>
    <%= text_field_tag :zip, @user_info[:zip] %>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
    <%= submit_tag "Submit" %>
  <% end %>
</section>

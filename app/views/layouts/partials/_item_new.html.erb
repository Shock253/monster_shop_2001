<h1>Create New Item For <%=link_to merchant.name, "/merchants/#{merchant.id}" %></h1>

<center>
  <%= form_tag path, method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, "#{item_name}" %>

    <%= label_tag :description %>
    <%= text_field_tag :description, "#{item_description}" %>

    <%= label_tag :price %>
    <%= text_field_tag :price, "#{item_price}" %>

    <%= label_tag :image %>
    <%= text_field_tag :image, "#{item_image}"%>

    <%= label_tag :inventory %>
    <%= text_field_tag :inventory, "#{item_inventory}" %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</center>
